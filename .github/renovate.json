{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabled": true,

  "labels": ["dependencies", "renovate"],

  "python": {
    "addLabels": ["dep:python"],
    "enabled": true
  },

  "docker": {
    "addLabels": ["dep:docker"],
    "enabled": true
  },

  "golang": {
    "addLabels": ["dep:golang"],
    "enabled": true
  },

  "rust": {
    "addLabels": ["dep:rust"],
    "enabled": true
  },

  "java": {
    "addLabels": ["dep:java"],
    "enabled": true
  },

  "js": {
    "addLabels": ["dep:js"],
    "enabled": true
  },

  "node": {
    "addLabels": ["dep:nodejs"],
    "enabled": true
  },

  "pre-commit": {
    "addLabels": ["dep:pre-commit"],
    "enabled": true,
    "automerge": true
  },

  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },

  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],

  "rangeStrategy": "bump",
  "automergeType": "pr",
  "dependencyDashboard": false,

  "timezone": "America/Denver",
  "schedule": ["at any time"],

  "extends": ["config:base"]
}
